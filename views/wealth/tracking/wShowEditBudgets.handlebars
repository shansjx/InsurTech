{{!-- viewing of nutritiontable --}}
<div class="container">
    <div class="card card-body">
        <div class="container">
            <h3 class="text-danger text-center">Budget Tracking - Edit Budget</h3>


            {{#if budgetT}}
            {{!-- {{#each nutritionT}}
            <h5>Today: {{date}}</h5>
            {{/each}} --}}

            <h5>Today</h5>

            <div class="dropdown float-right">
                <button type="button" class="btn btn-light mb-4 " data-toggle="dropdown">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" fill="currentColor" class="bi bi-three-dots"
                        viewBox="0 0 16 16">
                        <path
                            d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z">
                        </path>
                    </svg>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/wealth/tracking/budget/addBudget">Add Budget</a>
                    <a class="dropdown-item" href="/wealth/tracking/budget">&lt;View Budget</a>
                </div>
            </div>
            <br>
            <table class="table" border="1px solid black">
                <thead class="table-danger">
                    <tr>
                        <th scope="row">Budget Name</th>
                        <th scope="row">Amount</th>
                        <th scope="row" style="width: 20px; height:40px">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each budgetT}}
                    <tr>
                        <th scope="col">{{budget}}</th>
                        <td>${{amount}}</td>
                        <td>
                            <a href="/wealth/tracking/wEditBudget/{{id}}">
                            <i class="fa-solid fa-pen" style="color: gray;"></i>
                        </a>
                        </td>
                    </tr>
                        
                    {{/each}}
                </tbody>
            </table>

            {{else}}

            {{/if}}
        </div>

    </div>
</div>


<!-- JavaScript -->
