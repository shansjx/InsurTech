<div class="container">
    <div class="card card-body">
        <div class="container">
            <h3 class="text-danger text-center">Health Report</h3>

            {{#if heightT}}
            <h5>All Record</h5>
            <div class="float-right">
                <a href="/health/report/">
                    <i class="fa-solid fa-close" style="color: gray;"></i>
                </a>
            </div>
            <br>

            <table class="table">
                <thead class="table-danger">
                </thead>
                <tbody>
                    {{#each heightT}}
                    <tr>
                        <td>HEIGHT</td>
                        <td>{{date}}, {{time}}</td>
                        <td>{{height}} cm</td>
                        <td>
                            <a href="/health/report/hrDeleteHeight/{{id}}" 
                                <i class="fa-solid fa-trash" style="color: gray;"></i>
                            </a>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            {{else}}
            <h5>No health record added yet</h5>
            <div class="float-right">
                <a class="" href="/health/report/addHeight">
                    <img src="/img/hrAddIcon.png" class="add-record-img">
                </a>
            </div>
            {{/if}}
        </div>

    </div>
</div>
