<div class="container">
    <div class="card card-body">
        <div class="container">
            <h3 class="text-danger text-center">Health Report</h3>

            {{#if nutritionT}}
            <h1>All Record</h1>
            <div class="dropdown float-right">
                <button type="button" class="btn btn-light mb-4 " data-toggle="dropdown">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                        <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"></path>
                    </svg>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/health/report/addHeight">Add Height</a>
                    <a class="dropdown-item" href="/health/tracking/nutrition/showEditMeals">Edit Meals</a>
                </div>
            </div>
            <br>

            <table class="table">
                <thead class="table-danger">
                </thead>
                <tbody>
                    {{#each nutritionT}}
                    <tr>
                        <td>{{food}}</td>

                        <td>{{calories}}</td>

                        <td>{{carbs}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            {{else}}
            <h4>No health record added yet</h4>
            <div class="dropdown float-right">
                <button type="button" class="btn btn-light mb-4 " data-toggle="dropdown">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" fill="currentColor" class="bi bi-three-dots"
                        viewBox="0 0 16 16">
                        <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"></path>
                    </svg>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/health/report/addHeight">Add Height</a>
                </div>
            </div>
            {{/if}}
        </div>

    </div>
</div>